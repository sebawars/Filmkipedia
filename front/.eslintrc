{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "no-use-before-define": "off",
    "no-unused-vars": "warn",
    "camelcase": "warn",
    "prefer-const": "error",
    "no-const-assign": "error",
    "no-console": "warn",
    "no-alert": "error",
    "no-multi-spaces": "error",
    "eqeqeq": "error",
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
